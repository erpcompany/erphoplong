@model SYSTEM_MANAGEMENT.Models.CUSTOMER_GROUPS

@{
    ViewBag.Title = "Delete";
}
<link href="~/Areas/HopLong/Style/CustomerGroup/delete.css" rel="stylesheet"/>
<h2 class="h2">Delete</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MA_NHOM_KHACH)

        <div class="form-group">
            <div class="col-md-2"></div>
            @Html.LabelFor(model => model.TEN_NHOM_KHACH, "TÊN NHÓM KHÁCH", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.TEN_NHOM_KHACH, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2"></div>
            @Html.LabelFor(model => model.MO_TA, "MÔ TẢ", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.MO_TA, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-0 col-md-1">
                <a href="/HopLong/CUSTOMER_GROUPS"><img src="~/Content/images/back_icon.png" /></a>
            </div>
            <div class="col-md-offset-4 col-md-1">
                <input type="submit" id="submit" onclick="return confrim('Bạn có chắc muốn xóa không?')" value="" class="btn btn-default" />
            </div>
        </div>
    </div>
}


        


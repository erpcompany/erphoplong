@model IEnumerable<SYSTEM_MANAGEMENT.Models.BANG_LUONG>

@{
    ViewBag.Title = "Bảng lương";
}
<link href="~/Content/css/BangLuong/bangluongIndex.css" type="text/css" rel="stylesheet"/>
<div class="container">
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>
                    <b>Bảng lương của @Session["FULLNAME"]</b>
                    
                </h4>
                <center class="message">
                    <p>Công ty xin gửi bảng lương đến bạn @Session["FULLNAME"] với các thông tin như bên dưới</p>
                    <p>Cảm ơn bạn đã vất vả làm việc trong tháng vừa qua, rất mong bạn sẽ cùng công ty cố gắng hơn nữa</p>
                    <p>Mọi vấn đề thắc mắc về bảng lương, bạn hãy phản hồi lại với công ty theo địa chỉ email <span>lhn@hoplongtech.com.vn</span></p>
                </center>
            </div>
            <div class="maintable">
                <table class="table table-fixed" border="1">
                    <thead>
                        <tr>
                            <th rowspan="2" class="fix">THÁNG</th>
                            <th rowspan="2" class="fix">HỌ VÀ TÊN</th>
                            <th rowspan="2" class="fix">LƯƠNG CƠ BẢN</th>
                            <th rowspan="2" class="fix">LƯƠNG BẢO HIỂM</th>
                            <th colspan="4">PHỤ CẤP</th>
                            <th rowspan="2" class="fix">CÔNG CƠ BẢN </th>
                            <th colspan="2">LƯƠNG CƠ BẢN</th>
                            <th colspan="2">BẢO HIỂM</th>
                            <th colspan="2">LƯƠNG THỰC TẾ</th>
                            <th colspan="6">LƯƠNG LÀM THÊM</th>
                            <th rowspan="2" class="fix">TỔNG THU NHẬP</th>
                            <th rowspan="2" class="fix">TẠM ỨNG</th>
                            <th colspan="2">PHẠT ĐI TRỄ</th>
                            <th rowspan="2" class="fix">QUỸ CÔNG ĐOÀN</th>
                            <th rowspan="2" class="fix">LƯƠNG LAO CÔNG</th>
                            <th rowspan="2" class="fix">THỰC LĨNH</th>
                            <th rowspan="2" class="fix"><em class="fa fa-cog"></em></th>
                        </tr>
                        <tr style=" background:#0099FF ; color:#FFEEF1; font-weight bold">
                            <th>Ăn trưa</th>
                            <th>Đi lại/điện thoại</th>
                            <th>Thưởng doanh số</th>
                            <th>Trách nhiệm</th>
                            <th>Ngày</th>
                            <th>Giờ</th>
                            <th>Công ty đóng</th>
                            <th>Nhân viên đóng</th>
                            <th>Công đi làm thực</th>
                            <th>Số tiền</th>
                            <th>Công ngày thường</th>
                            <th>Số tiền</th>
                            <th>Công ngày nghỉ</th>
                            <th>Số tiền</th>
                            <th>Công ngày lễ</th>
                            <th>Số tiền</th>
                            <th>Số giờ</th>
                            <th>Số tiền</th>                           
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.THANG_LINH_LUONG)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.USER.FULLNAME)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LUONG_CO_BAN)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LUONG_BAO_HIEM)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PHU_CAP_AN_TRUA)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PHU_CAP_DI_LAI_DIEN_THOAI)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PHU_CAP_THUONG_DOANH_SO)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PHU_CAP_TRACH_NHIEM)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CONG_CO_BAN)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CONG_CO_BAN_NGAY)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CONG_CO_BAN_GIO)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BAO_HIEM_CONG_TY)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BAO_HIEM_NHAN_VIEN)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LUONG_THUC_TE_CONG_LAM_THUC)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LUONG_THUC_TE_SO_TIEN)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LUONG_LAM_THEM_CONG_NGAY_THUONG)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LUONG_LAM_THEM_TIEN_CONG_NGAY_THUONG)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LUONG_LAM_THEM_CONG_NGAY_NGHI)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LUONG_LAM_THEM_TIEN_CONG_NGAY_NGHI)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LUONG_LAM_THEM_CONG_NGAY_LE)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LUONG_LAM_THEM_TIEN_CONG_NGAY_LE)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TONG_TIEN_CONG)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TAM_UNG)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.GIO_DI_TRE)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PHAT_DI_TRE)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CONG_DOAN)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LUONG_LAO_CONG)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.THUC_LINH)
                                </td>

                                <td>
                                    <a href="/BANG_LUONG/Edit/@item.LUONG_ID"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a> &nbsp;&nbsp;&nbsp;
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
